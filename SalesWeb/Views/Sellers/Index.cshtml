@model IEnumerable<SalesWeb.Models.Seller>

@{
    ViewData["Title"] = "Sellers";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table table-striped table-hover table-bordered" >
    <thead class="align-content-center">
        <tr align="center" >
            <th align="center">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th align="center">
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th align="center">
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th align="center">
                @Html.DisplayNameFor(model => model.BaseSalary)
            </th>
            <th align="center">
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th align="center">Options</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
        <tr class="justify-content-center align-content-center">
            <td align="center">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td align="center">
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td align="center">
                @Html.DisplayFor(modelItem => item.BirthDate)
            </td>
                <td align="center">
                @Html.DisplayFor(modelItem => item.BaseSalary)
            </td>
            <td align="center">
                @Html.DisplayFor(modelItem => item.Department.Name)
            </td>
            <td align="center">
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>    
        }
    </tbody>
</table>

